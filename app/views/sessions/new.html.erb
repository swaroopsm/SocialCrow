<%= provide(:title,"Login") %>
<h1>Login</h1>
<hr>
<div class="row">
	<div class="span6">
		<%= form_for(:session, url: sessions_path) do |f| %>
			<div class="control-group">
				<h4><%= f.label :username,"Your Username: " %></h4>
				<div class="controls">
					<h4><%= f.text_field :username,{:class => 'span4'} %></h4>
					<p class="help-block">Your SocialCrow Username</p>
        <br/>
				</div>
				<h4><%= f.label :password,"Your Password: " %></h4>
				<div class="controls">
					<h4><%= f.password_field :password,{:class => 'span4'} %></h4>
					<p class="help-block">Your SocialCrow Password</p>
        <br/>
				</div>
				<%= f.submit "Login",class: "btn btn-large btn-success" %>
			</div>
		<% end %>
	</div>
</div>
